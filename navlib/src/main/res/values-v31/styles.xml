<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="NavView.Light" parent="Theme.Material3.DynamicColors.Light">
        <item name="android:textColorPrimary">?colorOnSurface</item>
        <item name="android:textColorSecondary">?colorOnSurfaceVariant</item>
        <item name="android:windowBackground">?colorSurfaceContainerLow</item>

        <!-- system bars config -->

        <item name="actionBarBackground">@color/transparent</item>
        <item name="navigationBarBackground">@color/transparent</item>

        <item name="android:navigationBarColor">
            @android:color/transparent
        </item>

        <item name="android:statusBarColor">
            @android:color/transparent
        </item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!-- component styling -->
        <item name="floatingActionButtonStyle">@style/NavView.Widget.FloatingActionButton</item>
        <item name="extendedFloatingActionButtonStyle">@style/NavView.Widget.ExtendedFloatingActionButton</item>
        <item name="boxBackgroundColor">@color/text_input_layout_background</item>`
        <item name="android:textViewStyle">@style/NavView.TextView</item>

        <item name="colorCard">@color/material_dynamic_secondary95</item>
        <item name="colorDrawer">@color/material_dynamic_neutral_variant90</item>
        <item name="colorOutlineVariant">@color/material_dynamic_neutral_variant80</item>

        <!-- drawer & bottom sheet styling -->
        <item name="materialDrawerCompactStyle">true</item>
        <item name="materialDrawerStyle">@style/Widget.MaterialDrawerStyle</item>
        <item name="materialDrawerHeaderStyle">@style/Widget.MaterialDrawerHeaderStyle</item>
    </style>
    <style name="NavView.Dark" parent="Theme.Material3.DynamicColors.Dark">
        <item name="android:textColorPrimary">?colorOnSurface</item>
        <item name="android:textColorSecondary">?colorOnSurfaceVariant</item>
        <item name="android:windowBackground">?colorSurfaceContainerLow</item>

        <!-- system bars config -->

        <item name="actionBarBackground">@color/transparent</item>
        <item name="navigationBarBackground">@color/transparent</item>

        <item name="android:navigationBarColor">
            @android:color/transparent
        </item>

        <item name="android:statusBarColor">
            @android:color/transparent
        </item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!-- component styling -->
        <item name="floatingActionButtonStyle">@style/NavView.Widget.FloatingActionButton</item>
        <item name="extendedFloatingActionButtonStyle">@style/NavView.Widget.ExtendedFloatingActionButton</item>
        <item name="boxBackgroundColor">@color/text_input_layout_background</item>
        <item name="android:textViewStyle">@style/NavView.TextView</item>

        <item name="colorCard">@color/material_dynamic_secondary50</item>
        <item name="colorDrawer">@color/material_dynamic_neutral_variant30</item>
        <item name="colorOutlineVariant">@color/material_dynamic_neutral_variant30</item>

        <!-- drawer & bottom sheet styling -->
        <item name="materialDrawerCompactStyle">true</item>
        <item name="materialDrawerStyle">@style/Widget.MaterialDrawerStyle</item>
        <item name="materialDrawerHeaderStyle">@style/Widget.MaterialDrawerHeaderStyle</item>
    </style>
</resources>